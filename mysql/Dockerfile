FROM mysql:5.7

RUN echo "\
  # CREATE DATABASE $MYSQL_DATABASE; \
  USE $MYSQL_DATABASE; \
  DROP USER 'app'@'%'; \
  CREATE USER '$MYSQL_USER'@'%' IDENTIFIED BY '$MYSQL_PASSWORD'; \
  GRANT ALL PRIVILEGES ON $MYSQL_DATABASE.* TO '$MYSQL_USER'@'%' WITH GRANT OPTION; \
  " > /docker-entrypoint-initdb.d/init.sql;
